{{#unless isEditable}}
  <button class='btn btn-primary'{{action 'toggleEditable'}}>Edit</button>
  <h1>{{trip.title}}</h1>
  <h2>{{trip.location}}</h2>
{{else}}
<p>Title</p>
<p>{{input value=trip.title placeholder='Title'}}</p>
<p>Location</p>
<p>{{input value=trip.location placeholder='Location'}}</p>
<p>Arrival</p>
<p>{{input value=trip.arrival placeholder='Arrival'}}</p>
<p>Departure</p>
<p>{{input value=trip.departure placeholder='Departure'}}</p>
<button class='btn btn-warning' {{action 'updateTrip'}}>Save</button>
<button class='btn btn-default'{{action 'toggleEditable'}}>Cancel</button>
{{/unless}}
