<div class="trip-form">
  <h1>Create a New Camping Trip</h1>
  {{input placeholder='Title' value=title}}
  {{input placeholder='Location' value=location}}
  {{input placeholder='Arrival' value=arrival}}
  {{input placeholder='Departure' value=departure}}
  {{textarea placeholder='Description' value=description}}

  <button {{action 'createTrip'}}>Create a trip</button>
</div>
