{{!-- trip template --}}

<div class='page'>
  <div class='container'>
    <div class='trip-page'>
      {{trip-details trip=model.trip
                     routeUpdateTrip='updateTrip'}}
      <br>
      <h1>Items</h1>
      {{item-create model=model.trip
                    routeCreateItem="createItem"}}

      {{#each model.trip.items as |eachItem|}}
        {{item-snippet item=eachItem}}
      {{/each}}
    </div>
    <div class='sidebar'>
      {{outlet}}
      {{#link-to "trip.invite" model}}<button class='btn btn-primary'>Invite Users</button>{{/link-to}}
    </div>

  </div>
</div>
